#!/bin/bash

function init_sharding() {
    # Enable sharding
    local db=$1

    mongo $db --quiet --port 27017 --eval 'sh.enableSharding("'$db'")'
    mongo $db --quiet --port 27017 --eval 'db.createCollection("entries")'
    mongo $db --quiet --port 27017 \
        --eval 'sh.shardCollection("'$db'.entries", { _id: "hashed"})'
}

function setup() {
    local nb_shard=$1
    local db=$2
    shift 2
    IFS=' ' read -r -a node <<< "$@"

    mkdir -p /var/lib/mongo-config
    for host in ${node[@]}; do
        for i in $(seq 1 $nb_shard); do
            ssh $host "mkdir -p /var/lib/mongo-shard$i"
        done
    done

    # Config server
    mongod --configsvr --replSet csrs \
           --port 27019 --dbpath /var/lib/mongo-config \
           --bind_ip 0.0.0.0 --fork --logpath /var/log/mongo-csrs.log
    mongo --quiet --port 27019 --eval \
        'rs.initiate({_id:"csrs",members:[{_id:0,host:"'${node[0]}':27019"}]})'

    # Shard server
    local tmp=0
    for host in ${node[@]}; do
        for i in $(seq 1 $nb_shard); do
            ssh $host "mongod --shardsvr --replSet shard$(($tmp + $i)) \
                   --port $((27000 + $i)) --dbpath /var/lib/mongo-shard$i \
                   --bind_ip 0.0.0.0 --fork --logpath /var/log/mongo-shard$i.log"
            mongo --quiet --port $((27000 + $i)) --host $host \
                   --eval 'rs.initiate({_id:"shard'$(($i + $tmp))'",members:[{_id:0,host:"'$host':'$((27000 + $i))'"}]})'
        done
        tmp=$(($tmp + $nb_shard))
    done

    # Mongos server
    mongos --port 27017 \
           --configdb csrs/${node[0]}:27019 \
           --bind_ip 0.0.0.0 --fork --logpath /var/log/mongos.log

    # Add shard in the cluster
    tmp=0
    for host in ${node[@]}; do
        for i in $(seq 1 $nb_shard); do
            mongo --quiet --port 27017 \
                  --eval 'sh.addShard("shard'$(($tmp + $i))'/'$host':'$((27000 + $i))'")'
        done
        tmp=$(($tmp + $nb_shard))
    done

    init_sharding $db
    mongo --quiet --port 27017 --eval 'sh.status()'
}

function clean() {
    IFS=' ' read -r -a node <<< "$@"

    for host in ${node[@]}; do
        ssh $host "pgrep mongos | xargs kill"
        ssh $host "pgrep mongod | xargs kill -9"
        ssh $host "rm -rf /var/lib/mongo-*"
        ssh $host "rm -rf /var/log/mongo-csrs*"
        ssh $host "rm -rf /var/log/mongo-shard*"
        ssh $host "rm -rf /var/log/mongos*"
    done
}

if [[ "$1" == "setup" ]]; then
    nb_shard=$2
    db=$3
    shift 3
    setup $nb_shard $db "$@"
elif [[ "$1" == "clean" ]]; then
    shift 1
    clean "$@"
elif [[ "$1" == "init" ]]; then
    init_sharding $2
fi
