#ifndef ROBINHOOD_LDISKFS_BACKEND_H
#define ROBINHOOD_LDISKFS_BACKEND_H

/* If the ldiskfs backend ever supports more operations than the plugin interface
 * exposes, those operations should be defined here.
 */

#include "robinhood/plugins/backend.h"
#include "robinhood/backend.h"
#include "robinhood/config.h"

#define RBH_LDISKFS_BACKEND_NAME "ldiskfs"

#mesondefine RBH_LDISKFS_BACKEND_MAJOR
#mesondefine RBH_LDISKFS_BACKEND_MINOR
#mesondefine RBH_LDISKFS_BACKEND_RELEASE
#define RBH_LDISKFS_BACKEND_VERSION RPV(RBH_LDISKFS_BACKEND_MAJOR, \
                                        RBH_LDISKFS_BACKEND_MINOR, \
                                        RBH_LDISKFS_BACKEND_RELEASE)

/**
 * Create an ldiskfs backend
 *
 * @param self        the ldiskfs plugin
 * @param uri         URI of the backend
 * @param config      the config to use in the new backend
 * @param read_only   whether to open the SQLite DB in read only mode or
 *                    read/write
 *
 *
 * @return          a pointer to a newly allocated ldiskfs backend on success,
 *                  NULL on error and errno is set appropriately
 *
 * @error EINVAL    the backend's configuration is invalid (either a wrong
 *                  value is used, or a required one is missing)
 * @error ENOMEM    there was not enough memory available
 */
struct rbh_backend *
rbh_ldiskfs_backend_new(const struct rbh_backend_plugin *self,
                        const struct rbh_uri *uri,
                        struct rbh_config *config,
                        bool read_only);

#endif
